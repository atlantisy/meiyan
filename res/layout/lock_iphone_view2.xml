<!--                 android:layout_width="fill_parent" -->
<!--                 android:layout_height="wrap_content" -->
<!--                 android:text="" /> -->
<!--         </LinearLayout> -->
    </LinearLayout>

</com.meiyanlock.android.IPhoneLockView>