<!--         android:layout_height="wrap_content" -->
<!--         android:text="@string/custom_check" /> -->
	
    <EditText
        android:id="@+id/editText_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="9"
        android:singleLine="true"
        android:hint="@string/custom_text"/>

