<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_white"
    tools:context="${packageName}.${activityClass}" >

        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/shape_bg_grey"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/initialguide_return"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@color/alpha"
            android:scaleType="centerInside"
            android:src="@drawable/ic_return" />

        <View
            android:layout_width="1.0px"
            android:layout_height="48.0px"
            android:layout_gravity="center_vertical"
            android:background="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="初始设置"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/blank" />
    </LinearLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:background="@color/gray_white" />
    <Button
        android:id="@+id/initialguide1"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="@drawable/default_button_selector"
        android:layout_margin="8dp"        
        android:paddingLeft="16dp"
        android:gravity="left|center_vertical"           
        android:textColor="@color/gray_black"
        android:textSize="16sp"
        android:text="1.关闭系统锁屏(所有系统)" />   
    <Button
        android:id="@+id/initialguide2"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="@drawable/default_button_selector"
        android:layout_margin="8dp"
        android:paddingLeft="16dp"
        android:gravity="left|center_vertical"        
        android:textColor="@color/gray_black"
        android:textSize="16sp"
        android:text="2.显示悬浮窗(仅限MIUI)" /> 
             
	<Button
        android:id="@+id/initialguide3"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="@drawable/default_button_selector"
        android:layout_margin="8dp"
        android:paddingLeft="16dp"
        android:gravity="left|center_vertical"        
        android:textColor="@color/gray_black"
        android:textSize="16sp"
        android:text="3.信任该程序，允许自启动(仅限MIUI)" />
	<!-- <Button
        android:id="@+id/initialguide4"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:background="@drawable/default_button_selector"
        android:layout_margin="8dp"
        android:paddingLeft="16dp"
        android:gravity="left|center_vertical"        
        android:textColor="@color/gray_black"
        android:text="4.开启开发者，直接进入系统(仅限MIUI)" /> -->
 		   
	<Button
        android:id="@+id/initialguide_ok"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/editok_button_selector"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="完成"
        android:textColor="@android:color/white" 
        android:textSize="18sp"/>
   
</LinearLayout>
