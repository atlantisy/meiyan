<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LockLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper00"
    android:gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/empty" >

            <cn.minelock.android.DigitalClock
                android:id="@+id/time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/timeDisplay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="0dp"
                    android:layout_marginTop="0dp"
                    android:textColor="@color/white"
                    android:textSize="56sp" />
                <TextView
                    android:id="@+id/am_pm"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="0sp" 
                    android:textColor="@color/alpha"/>
                
                <LinearLayout
                    android:layout_below="@id/timeDisplay"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp"
                    android:paddingBottom="0dp"                   
                    android:orientation="horizontal"
                    android:gravity="center">
                	<TextView
                    	android:id="@+id/weekDisplay"                   	
                    	android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                    	android:layout_gravity="center"
                    	android:text="周"
                    	android:textSize="14sp" 
                    	android:textColor="@color/white"/>
                	<TextView
                    	android:id="@+id/dateDisplay"
                    	android:layout_width="wrap_content"
                    	android:layout_height="wrap_content"
                    	android:layout_gravity="center"
                    	android:paddingLeft="8dp"
                    	android:text="年月日"
                    	android:textSize="14sp" 
                    	android:textColor="@color/white"/> 
                </LinearLayout>                 
            </cn.minelock.android.DigitalClock>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/login_toast"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text=""
                android:textColor="@android:color/white" />

            <cn.minelock.widget.PatternPassWordView
                android:id="@+id/mPatternPassWordView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:flipInterval="100"
                android:persistentDrawingCache="animation" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>