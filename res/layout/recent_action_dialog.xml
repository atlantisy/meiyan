<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >
        <TextView
            android:id="@+id/recent_action_label"
            android:textColor="@color/app_color"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:paddingLeft="24dp" 
            android:text="标题"/>
		<View 
		    android:layout_width="fill_parent"
		    android:layout_height="1px"
		    android:layout_marginLeft="12dp"
		    android:layout_marginRight="12dp"
		    android:background="@color/gray_gray"/>  
        <Button
            android:id="@+id/recent_action_copy"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="24dp" 
            android:text="复制文字"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="@drawable/default_button_selector" />  
		<View 
		    android:layout_width="fill_parent"
		    android:layout_height="1px"
		    android:layout_marginLeft="12dp"
		    android:layout_marginRight="12dp"		    
		    android:background="@color/gray_gray1"/> 
		<Button
            android:id="@+id/recent_action_share"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="24dp" 
            android:text="分享壁纸"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="@drawable/default_button_selector" /> 
		<View 
		    android:layout_width="fill_parent"
		    android:layout_height="1px"
		    android:layout_marginLeft="12dp"
		    android:layout_marginRight="12dp"		    
		    android:background="@color/gray_gray1"/> 		       	
		<Button
            android:id="@+id/recent_action_delete"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="24dp" 
            android:text="删除该图文"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:background="@drawable/default_button_selector" /> 	
	</LinearLayout>
</LinearLayout>