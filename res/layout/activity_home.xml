<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/alpha0_black"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/home_topbar"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/app_color"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/lock_icon" />

        <Button
            android:id="@+id/verse_option"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/alpha"
            android:drawableRight="@drawable/subscript"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/verse0"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:text="@string/app_name"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white" />

        <ImageView
            android:id="@+id/blank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/blank" />

        <ImageButton
            android:id="@+id/home_share"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@color/alpha"
            android:padding="4dp"
            android:src="@drawable/share" />

        <ImageButton
            android:id="@+id/home_setting"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:background="@color/alpha"
            android:padding="4dp"
            android:src="@drawable/setting" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_wallpaper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/default_wallpaper"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/home_verse"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:id="@+id/line_verse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/alpha"
                android:layout_gravity="center"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="0"
                android:text="@string/app_verse_cn"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <GridView
                android:id="@+id/grid_verse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:horizontalSpacing="10dp"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp" >
            </GridView>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/home_bottombar"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@color/alpha_black"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/home_text"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/alpha"
                android:src="@drawable/edit_text" />

            <ImageButton
                android:id="@+id/home_refresh"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/alpha"
                android:src="@drawable/refresh" />

            <ImageButton
                android:id="@+id/home_lock"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/alpha"
                android:src="@drawable/lock_button_style" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>